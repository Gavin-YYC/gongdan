extends layout

block header
	title 客户注册 | 工单系统
block content
	.ui.grid
		.three.wide.column
		.ten.wide.column.ui.segment(style="margin-top:100px;")
			h1 客户注册
			.ui.two.column.middle.aligned.relaxed.grid.basic.segment
				.column(ms-controller="userRegister")
					.ui.form.segment(ms-submit="submit")
						.field
							label 用户名
							.ui.left.labeled.icon.input
								input(type="text",placeholder="用户名",ms-duplex="o.username",name="username")
								i.user.icon
								.ui.corner.label
									i.icon.asterisk
						.field
							label 手机
							.ui.left.labeled.icon.input
								input(type="text",placeholder="手机",ms-duplex="o.tel",name="tel")
								i.phone.icon
								.ui.corner.label
									i.icon.asterisk
						.field
							label 密码
							.ui.left.labeled.icon.input
								input(type="password",placeholder="密码",ms-duplex="o.password1",name="password1")
								i.user.icon
								.ui.corner.label
									i.icon.asterisk
						.field
							label 重复密码
							.ui.left.labeled.icon.input
								input(type="password",placeholder="密码",ms-duplex="o.password2",name="password2")
								i.user.icon
								.ui.corner.label
									i.icon.asterisk
						a.ui.submit.blue.button(ms-click="submit") 提交
						.ui.error.message(ms-duplex="err")
				.ui.vertical.divider or
				.center.aligned.column
					a(href="/").huge.green.ui.labeled.icon.button
						i.signup.icon
						span 登陆
	.ui.modal#setsuc
		i.close.icon
		.header 成功提示：
		.content.
			注册成功！返回 <a href="/">登陆</a> 工单系统。
		.actions
			.ui.button 关闭
block footer
	script(src="/javascripts/home.js")